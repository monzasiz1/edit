<% layout('layout') %>
<h2>Benutzer bearbeiten</h2>
<% if (error) { %><div class="error"><%= error %></div><% } %>
<form method="POST" action="/users/edit/<%= userToEdit.id %>">
  <input type="text" name="username" value="<%= userToEdit.username %>" required />
  <input type="password" name="password" placeholder="Neues Passwort (leer lassen für unverändert)" />
  <label>
    <input type="checkbox" name="is_admin" <% if (userToEdit.is_admin) { %>checked<% } %> /> Admin
  </label>
  <button type="submit">Speichern</button>
</form>
<a href="/users">Zurück</a>
