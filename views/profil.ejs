<div class="profile-container">
  <h2>Profil bearbeiten</h2>

  <% if (nameErr) { %>
    <div class="error"><%= nameErr %></div>
  <% } %>
  <% if (nameMsg) { %>
    <div class="success"><%= nameMsg %></div>
  <% } %>
  <form action="/profil/name" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="<%= user.username %>" required />
    <button type="submit">Name ändern</button>
  </form>

  <hr/>

  <% if (pwErr) { %>
    <div class="error"><%= pwErr %></div>
  <% } %>
  <% if (pwMsg) { %>
    <div class="success"><%= pwMsg %></div>
  <% } %>
  <form action="/profil/passwort" method="POST">
    <label for="oldpw">Altes Passwort</label>
    <input type="password" id="oldpw" name="oldpw" required />
    <label for="newpw">Neues Passwort</label>
    <input type="password" id="newpw" name="newpw" required />
    <button type="submit">Passwort ändern</button>
  </form>
</div>
