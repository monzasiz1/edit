    border: 1.7px solid var(--glass-border);
    font-family: 'SF Pro Display Variable', 'SF Pro Display', 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    color: var(--green-dark);
    animation: fadeinScale 0.5s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
    opacity: 0;
    transform: translateY(24px) scale(0.94);
  }

  .ios-title {
    font-weight: 900;
    font-size: 2.6rem;
    margin-bottom: 3rem;
    letter-spacing: -0.02em;
    background: linear-gradient(120deg, var(--green-light), var(--green-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    user-select: none;
    text-shadow:
      0 2px 8px #a9d6b8aa,
      0 0 0 var(--green-dark);
  }

  .ios-form {
    display: flex;
    flex-direction: column;
    gap: 1.8rem;
    position: relative;
  }

  .ios-form label {
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--green-dark);
    user-select: none;
  }

  .ios-form input[type="text"],
  .ios-form input[type="password"] {
    font-family: inherit;
    padding: 1rem 1.4rem;
    font-size: 1.05rem;
    border-radius: 2rem;
    border: 2px solid var(--green-light);
    background: #f3fbf6;
    color: var(--green-dark);
    outline-offset: 4px;
    transition:
      border-color 0.3s ease,
      box-shadow 0.3s ease,
      background 0.35s ease;
  }

  .ios-form input[type="text"]:focus,
  .ios-form input[type="password"]:focus {
    border-color: var(--green-dark);
    box-shadow: 0 0 20px 5px var(--green-light);
    background: #eaf8f1;
  }

  .ios-btn {
    cursor: pointer;
    user-select: none;
    background: linear-gradient(135deg, var(--green-dark), var(--green-light));
    border: none;
    border-radius: 2.5rem;
    padding: 1.15rem 0;
    font-weight: 900;
    font-size: 1.18rem;
    color: white;
    box-shadow: 0 8px 28px var(--green-light);
    transition:
      background 0.3s ease,
      box-shadow 0.3s ease,
      transform 0.2s ease;
    width: 160px;
    margin: 1.8rem auto 0;
    display: block;
  }

  .ios-btn:hover {
    background: linear-gradient(135deg, #22b86f, #8ddba7);
    box-shadow: 0 12px 36px #8ddba78f;
    transform: scale(1.08);
  }

  .ios-btn:active {
    transform: scale(0.96);
    box-shadow: 0 6px 20px #73b283;
  }

  .msg-success,
  .msg-error {
    font-weight: 700;
    padding: 0.8rem 1.2rem;
    border-radius: 1.5rem;
    user-select: none;
    text-align: center;
  }

  .msg-success {
    background-color: #d0f0d8;
    color: #1a6a2d;
    margin-top: -1rem;
  }

  .msg-error {
    background-color: #fbdcdc;
    color: #b61b20;
    margin-top: -1rem;
  }

  .ios-separator {
    margin: 3rem 0;
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--green-light), transparent);
    opacity: 0.55;
  }

  @keyframes fadeinScale {
    0% {
      opacity: 0;
      transform: translateY(24px) scale(0.94);
    }
    100% {
      opacity: 1;
      transform: none;
    }
  }

  @media (max-width: 480px) {
    .profil-card {
      padding: 2.5rem 2rem 2.8rem;
      width: 90vw;
    }
    .ios-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
    .ios-btn {
      width: 100%;
      font-size: 1.05rem;
      padding: 1rem 0;
      border-radius: 2rem;
      margin-top: 1.5rem;
    }
  }
</style>
