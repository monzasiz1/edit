<main class="apple2025-users">
  <!-- GLASIGER, BLURRIGER HEADER -->
  <section class="apple2025-glass-header">
    <div class="apple2025-header-content">
      <div class="glass-blur-bg"></div>
      <div class="header-flex">
        <div>
          <h1 class="apple2025-section-title">Benutzer√ºbersicht</h1>
          <div class="apple2025-header-meta">
            <span>Mitglieder</span>
            <span class="apple2025-header-value"><%= users.length %></span>
          </div>
        </div>
        <a href="/users/add" class="apple2025-fab-btn" title="Benutzer hinzuf√ºgen">+</a>
      </div>
    </div>
  </section>

  <section class="apple2025-userlist">
    <% users.forEach((u, idx) => { %>
      <div class="apple2025-usercard fade-in" style="--delay: <%= idx * 42 %>ms">
        <div class="apple2025-user-row">
          <div class="apple2025-avatar<%= u.is_admin ? ' admin' : '' %>">
            <span><%= u.username.slice(0,2).toUpperCase() %></span>
          </div>
          <div class="apple2025-userdata">
            <span class="apple2025-username"><%= u.username %></span>
            <span class="apple2025-role <%= u.is_admin ? 'admin' : '' %>">
              <%= u.is_admin ? 'Spie√ü' : 'Mitglied' %>
            </span>
          </div>
          <div class="apple2025-actions">
            <a href="/users/edit/<%= u.id %>" class="icon-btn" title="Bearbeiten">‚úèÔ∏è</a>
            <form action="/users/delete/<%= u.id %>" method="POST" style="display:inline">
              <button class="icon-btn danger" onclick="return confirm('Wirklich l√∂schen?')" title="L√∂schen">üóëÔ∏è</button>
            </form>
            <a href="/export/user/<%= u.id %>/pdf" class="icon-btn" title="PDF" target="_blank">üìÑ</a>
            <a href="/export/user/<%= u.id %>/csv" class="icon-btn" title="CSV" target="_blank">üìë</a>
          </div>
        </div>
      </div>
    <% }) %>
  </section>
</main>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap');
:root {
  --accent: #28543a;
  --accent2: #c8eed4;
  --glass-bg: rgba(255,255,255,0.35);
  --glass-outline: rgba(100, 170, 140, 0.19);
  --glass-blur: blur(16px);
  --user-gradient: linear-gradient(120deg,#54dc97 15%,#458e67 90%);
  --user-admin: linear-gradient(100deg,#ffe3af 10%,#ffe67a 90%);
  --role-member: linear-gradient(95deg,#e7fff0 0%,#54dc97 85%);
  --role-admin: linear-gradient(95deg,#ffefb8 10%,#ffe67a 95%);
  --fab-glass: rgba(61, 105, 90, 0.84);
}
body, html {
  font-family: 'SF Pro Display', 'Inter', 'Segoe UI', Arial, system-ui, sans-serif;
  background: linear-gradient(135deg,#e7f1eb 0%,#e3f7f4 100%);
  min-height: 100vh;
}
.apple2025-users {
  max-width: 740px;
  margin: 2.9rem auto 2rem auto;
  padding: 0 1.3rem;
}
.apple2025-glass-header {
  margin-bottom: 2.2rem;
  border-radius: 2em;
  position: relative;
  overflow: hidden;
  background: transparent;
  min-height: 126px;
}
.apple2025-header-content {
  position: relative;
  z-index: 2;
  padding: 2.1rem 2.2rem 1.1rem 2.2rem;
}
.glass-blur-bg {
  position: absolute;
  inset: 0;
  background: var(--glass-bg);
  box-shadow: 0 6px 32px #c9eed877, 0 1.5px 14px #54dc9737;
  border-radius: 2em;
  border: 1.2px solid var(--glass-outline);
  backdrop-filter: var(--glass-blur);
  -webkit-backdrop-filter: var(--glass-blur);
  z-index: 1;
  transition: background 0.22s, box-shadow 0.22s;
  pointer-events: none;
}
.header-flex {
  display: flex; flex-direction: row; align-items: flex-end; justify-content: space-between; gap: 2.1rem; position: relative; z-index: 2;
}
.apple2025-section-title {
  font-size: 2.15rem;
  font-weight: 900;
  color: #17432b;
  letter-spacing: -1.2px;
  margin: 0 0 0.15em 0;
  background: linear-gradient(91deg, #28543a 60%, #a2ffe2 120%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  filter: drop-shadow(0 1px 10px #c9eed877);
  text-shadow: 0 2px 5px #c8eed48c;
}
.apple2025-header-meta {
  display: flex; gap: 0.7em; align-items: baseline; font-size: 1.17em; margin-top: 0.25em; font-weight: 600; color: #2fa770; letter-spacing: 0.01em; opacity: .83;
}
.apple2025-header-value {
  font-size: 1.75em; font-weight: 900; color: #1b4d34; letter-spacing: -0.04em; margin-left: 0.12em; filter: drop-shadow(0 0 5px #a8eed4ad);
}
.apple2025-fab-btn {
  display: flex; align-items: center; justify-content: center;
  background: var(--fab-glass);
  color: #fff; font-size: 2.09rem; font-weight: 800;
  border-radius: 50%; width: 54px; height: 54px;
  box-shadow: 0 8px 22px #a4edc944;
  border: none; transition: background 0.13s, box-shadow 0.13s;
  text-decoration: none; position: relative; z-index: 5;
  outline: none; cursor: pointer;
}
.apple2025-fab-btn:hover { background: #327a56; box-shadow: 0 13px 24px #b4f7d2bb; }

.apple2025-userlist {
  display: flex; flex-direction: column; gap: 1.35rem; margin-top: 0.9rem;
}
.apple2025-usercard {
  background: rgba(255,255,255,0.95);
  border-radius: 1.25em;
  border: 1.3px solid var(--glass-outline);
  box-shadow: 0 7px 35px #94eecb27;
  padding: 1.3rem 1.1rem 1.1rem 1.1rem;
  display: flex; flex-direction: column; gap: 0.19em;
  animation: fadein-user 0.91s both cubic-bezier(.44,.15,0,1.12);
  animation-delay: var(--delay, 0ms);
  opacity: 0;
  transition: box-shadow .18s, border .12s, background .13s;
  will-change: box-shadow, border;
  position: relative;
  overflow: hidden;
}
@keyframes fadein-user { from { opacity: 0; transform: translateY(18px);} to { opacity: 1; transform: none;} }
.apple2025-usercard:hover {
  box-shadow: 0 14px 44px #7ef2bc35, 0 2px 11px #b8eeb355;
  border: 1.7px solid #9be2b8;
  background: #f9fdfc;
}
.apple2025-user-row {
  display: flex; align-items: center; gap: 1.19em;
}
.apple2025-avatar {
