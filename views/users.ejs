}
.apple2025-avatar.admin {
  background: var(--user-admin); color: #bb8f0a;
  box-shadow: 0 2px 16px #ffe1873a;
}
.apple2025-userdata {
  flex: 1;
  display: flex; flex-direction: column; align-items: flex-start; gap: 0.01em;
}
.apple2025-username {
  font-size: 1.08em;
  font-weight: 900;
  color: #1b2d21;
  letter-spacing: -0.36px;
  margin-bottom: 0.02em;
  font-family: 'SF Pro Display', 'Inter', 'Segoe UI', Arial, system-ui, sans-serif;
}
.apple2025-role {
