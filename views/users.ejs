  border-radius: 2em;
  border: 1.2px solid var(--glass-outline);
  backdrop-filter: var(--glass-blur);
  -webkit-backdrop-filter: var(--glass-blur);
  z-index: 1;
  pointer-events: none;
}

.header-flex {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: space-between;
  align-items: flex-end;
  position: relative;
  z-index: 2;
}

.apple2025-section-title {
  font-size: 2.7rem;
  font-weight: 900;
  color: #17432b;
