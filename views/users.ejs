  gap: 0.7em;
  align-items: baseline;
  font-size: 1.17em;
  margin-top: 0.25em;
  font-weight: 600;
  color: #2fa770;
  letter-spacing: 0.01em;
  opacity: 0.83;
  flex-wrap: wrap;
}

.apple2025-header-value {
