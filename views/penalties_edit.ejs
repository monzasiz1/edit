<h2>Strafe bearbeiten</h2>
<% if (error) { %>
  <div class="error"><%= error %></div>
<% } %>
<form method="POST">
  <label>Nutzer:</label>
  <select name="user_id" required>
    <% users.forEach(u => { %>
      <option value="<%= u.id %>" <%= penalty.user_id === u.id ? 'selected' : '' %>><%= u.username %></option>
    <% }) %>
  </select>
  
  <label>Art der Strafe:</label>
  <input type="text" name="type" value="<%= penalty.type %>" required>

  <label>Veranstaltung:</label>
  <input type="text" name="event" value="<%= penalty.event %>" required>

  <label>Grund / Beschreibung:</label>
  <input type="text" name="reason" value="<%= penalty.reason %>" required>

  <label>Datum:</label>
  <input type="date" name="date" value="<%= penalty.date ? penalty.date.toISOString ? penalty.date.toISOString().slice(0,10) : penalty.date : '' %>" required>

  <button type="submit" class="btn">ğŸ’¾ Speichern</button>
  <a href="/penalties" class="btn btn-cancel">Abbrechen</a>
</form>
