
<style>
  :root {
    --apple-green: #4CAF50;
    --apple-green-light: #8BC34A;
    --apple-green-lighter: #AED581;
    --apple-bg: linear-gradient(112deg,#F7FAF8 0%,#eef7ee 100%);
    --glass: rgba(255,255,255,0.85);
    --shadow-card: 0 12px 42px 0 #B9C9B244, 0 2px 14px 0 #C2D6BC22;
    --radius-xl: 2.25rem;
    --text-color: #21332a;
    --text-muted: #5a6b51;
    --face-size: 2.25em;
  }

  body {
    background: var(--apple-bg);
  }

  .ranking-title-ios {
    font-weight: 900;
    font-size: 2.6rem;
    background: linear-gradient(90deg, var(--apple-green) 15%, var(--apple-green-light) 60%, var(--apple-green-lighter) 90%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-align: center;
    margin: 2rem 0 1.8rem;
    animation: fadein-ios 1.3s ease forwards;
    opacity: 0;
    transform: translateY(32px);
  }

  @keyframes fadein-ios {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ranking-table-wrap {
    width: 100%;
    max-width: 580px;
    background: var(--glass);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-card);
    backdrop-filter: blur(18px) saturate(120%);
    border: 1.5px solid #dbe9d7;
    padding: 1.5rem;
    overflow-x: hidden;
    margin: 0 auto 2rem;
  }

  .ranking-table {
    width: 100%;
    border-collapse: collapse;
    table-layout: auto;
  }

  .ranking-table th,
  .ranking-table td {
    text-align: left;
    padding: 0.75em 0.4em;
    font-size: 1rem;
  }

  .ranking-table th {
    color: var(--apple-green);
    font-weight: 800;
    border-bottom: 2px solid #b4d0a3;
  }

  .ranking-table td {
    color: var(--text-color);
    font-weight: 600;
    border-bottom: 1px solid #e6f0de;
  }

  .ranking-table tr:last-child td {
    border-bottom: none;
  }

  .user-info {
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    gap: 0.7em;
  }

  .user-face {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #e4f0dc 60%, #c5dfb9 100%);
    font-weight: 900;
    width: var(--face-size);
    height: var(--face-size);
    font-size: 1.05rem;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    flex-shrink: 0;
  }

  .user-face img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .highlight-user {
    background: linear-gradient(92deg, #e0f4d6 74%, #d1eac8 100%);
    font-weight: 900;
    border-radius: 1.2em;
    animation: ownin 0.85s ease;
  }

  .amount-strong {
    font-weight: 900;
    color: #2e6f2b;
    font-size: 1.1em;
  }

  .you-tag {
    font-size: 0.75rem;
    background: var(--apple-green);
    color: #fff;
    padding: 0.25em 0.7em;
    border-radius: 1em;
    margin-left: 0.5em;
    font-weight: 700;
  }

  .blurred .user-face,
  .blurred .user-name,
  .blurred .amount-blur {
    filter: blur(6px) grayscale(0.3);
    opacity: 0.45;
  }

  .back-to-dashboard {
    margin-top: 1.5rem;
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .btn-back {
    background: linear-gradient(135deg, var(--apple-green), var(--apple-green-light));
    color: #fff;
    font-weight: 900;
    font-size: 1rem;
    padding: 0.6em 1.8em;
    border-radius: 2em;
    text-decoration: none;
    box-shadow: 0 4px 20px rgba(76, 175, 80, 0.45);
    transition: all 0.25s ease;
  }

  .btn-back:hover {
    transform: translateY(-2px);
    background: linear-gradient(135deg, var(--apple-green-light), var(--apple-green-lighter));
  }

  @keyframes ownin {
    0% { opacity: 0; transform: translateY(28px) scale(0.96); }
    100% { opacity: 1; transform: none; }
  }

  @media (max-width: 540px) {
    html { font-size: 15px; }
    .ranking-title-ios {
      font-size: 2rem;
    }
    .ranking-table th,
    .ranking-table td {
      font-size: 0.9rem;
      padding: 0.55em 0.3em;
    }
    .user-face {
      width: 1.9em;
      height: 1.9em;
    }
    .btn-back {
      font-size: 0.95rem;
      padding: 0.5em 1.2em;
    }
  }

  @media (max-width: 420px) {
    .user-info {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.2em;
    }
    .you-tag {
      margin-left: 0;
    }
    .ranking-table-wrap {
      padding: 1rem;
    }
  }
</style>

<h2 class="ranking-title-ios">üèÜ Strafen-Ranking</h2>

<div class="ranking-table-wrap">
  <table class="ranking-table" aria-label="Strafen Ranking Tabelle">
    <thead>
      <tr>
        <th scope="col">Platz</th>
        <th scope="col">Benutzer</th>
        <th scope="col">Betrag</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user, index) => { %>
        <% if (user.id === userId) { %>
          <tr class="highlight-user">
            <td><%= index + 1 %></td>
            <td>
              <div class="user-info">
                <span class="user-face" aria-label="Avatar von <%= user.username %>">
                  <% if(user.avatar){ %>
                    <img src="<%= user.avatar %>" alt="Avatar von <%= user.username %>" />
                  <% } else { %>
                    <%= user.username.split(' ').map(n=>n[0]).join('').toUpperCase().substring(0,2) %>
                    <svg viewBox="0 0 32 32" fill="none" aria-hidden="true">
                      <circle cx="16" cy="16" r="16" fill="#d7ebce"/>
                      <ellipse cx="16" cy="13" rx="6" ry="5" fill="#b5e2b3"/>
                      <ellipse cx="16" cy="24" rx="8.5" ry="5.5" fill="#c1e1c1"/>
                    </svg>
                  <% } %>
                </span>
                <span class="user-name"><%= user.username %></span>
                <span class="you-tag" aria-label="Du">Du</span>
              </div>
            </td>
            <td><span class="amount-strong"><%= user.total_penalty_amount.toFixed(2) %> ‚Ç¨</span></td>
          </tr>
        <% } else { %>
          <tr class="blurred" aria-hidden="true">
            <td><%= index + 1 %></td>
            <td>
              <div class="user-info">
                <span class="user-face"></span>
                <span class="user-name"></span>
              </div>
            </td>
            <td class="amount-blur"></td>
          </tr>
        <% } %>
      <% }); %>
    </tbody>
  </table>
</div>

<div class="back-to-dashboard">
  <a href="/dashboard" class="btn-back" aria-label="Zur√ºck zum Dashboard">üîô Zur√ºck zum Dashboard</a>
</div>
