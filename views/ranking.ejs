<h2 class="ranking-title">Ranking der Benutzer</h2>
<table class="ranking-table">
  <thead>
    <tr>
      <th>Platz</th>
      <th>Benutzername</th>
      <th>Betrag</th> <!-- Betrag der Strafen -->
    </tr>
  </thead>
  <tbody>
    <% users.forEach((user, index) => { %>
      <% if (user.id === userId) { %> <!-- Der aktuelle Benutzer wird hervorgehoben -->
        <tr class="highlight-user">
          <td><%= index + 1 %></td>
          <td><%= user.username %></td>
          <td><%= user.total_penalty_amount.toFixed(2) %> €</td>
        </tr>
      <% } else { %> 
        <% if (isAdmin) { %> <!-- Admin sieht alle Benutzer ohne Blur -->
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.username %></td>
            <td><%= user.total_penalty_amount.toFixed(2) %> €</td>
          </tr>
        <% } else { %> <!-- Nicht-Admin sieht andere Benutzer geblurrt -->
          <tr class="blurred">
            <td><%= index + 1 %></td>
            <td><%= user.username %></td>
            <td><%= user.total_penalty_amount.toFixed(2) %> €</td>
          </tr>
        <% } %>
      <% } %>
    <% }); %>
  </tbody>
</table>
