<h2 class="ranking-title">Strafen-Ranking</h2>
<table class="ranking-table">
  <thead>
    <tr>
      <th>Platz</th>
      <th>Benutzername</th>
      <th>Strafen</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach((user, index) => { %>
      <% if (user.id === userId) { %> <!-- Der aktuelle Benutzer wird hervorgehoben -->
          <tr class="highlight-user">
          <td><%= index + 1 %></td>
          <td><%= user.username %></td>
          <td><%= user.total_penalty_amount.toFixed(2) %></td>
        </tr>
      <% } else { %> <!-- Alle anderen Benutzer werden abgeblendet -->
        <tr class="blurred">
          <td><%= index + 1 %></td>
          <td><%= user.username %></td>
          <td><%= user.total_penalty_amount.toFixed(2) %></td>
        </tr>
      <% } %>
    <% }); %>
  </tbody>
</table>

<!-- Button zurück zum Dashboard -->
<div class="back-button-container">
  <a href="/dashboard" class="btn btn-small">Zurück zum Dashboard</a>
</div>
