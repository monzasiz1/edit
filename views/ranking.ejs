<div class="pdf-export-section">
  <h2>📄 PDF-Export</h2>
  <div class="pdf-export-cards">
    <% if (user.is_admin) { %>
      <div class="pdf-card">
        <h3>📚 Alle Strafen als PDF</h3>
        <div class="muted">Lade alle Strafen als Sammel-PDF herunter.</div>
        <a href="/export/all" class="btn btn-add" target="_blank">⬇️ Alle Strafen herunterladen</a>
      </div>
      <div class="pdf-card">
        <h3>👥 PDF für einzelne Nutzer</h3>
        <div class="muted">Exportiere das Strafenkonto einzelner Mitglieder als PDF.</div>
        <% if (users && users.length) { %>
          <ul class="user-pdf-list">
            <% users.forEach(u => { %>
              <li>
                <span><strong>👤 <%= u.username %></strong></span>
                <a href="/export/user/<%= u.id %>" target="_blank" class="btn btn-small">📥 PDF</a>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <div class="muted">Keine Nutzer gefunden.</div>
        <% } %>
      </div>
    <% } else { %>
      <div class="pdf-card">
        <h3>🧾 Mein Strafenkonto als PDF</h3>
        <div class="muted">Lade dein persönliches Strafenkonto als PDF herunter.</div>
        <a href="/export/me" class="btn" target="_blank">📥 PDF herunterladen</a>
      </div>
    <% } %>
  </div>
</div>
