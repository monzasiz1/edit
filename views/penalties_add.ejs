<h2>Neue Strafe vergeben</h2>
<% if (error) { %>
  <div class="error"><%= error %></div>
<% } %>
<form method="POST" class="form-card">
  <label for="user_id">Nutzer:</label>
  <select name="user_id" id="user_id" required>
    <% users.forEach(u => { %>
      <option value="<%= u.id %>"><%= u.username %></option>
    <% }) %>
  </select>
  
  <label for="type">Art der Strafe:</label>
  <input type="text" name="type" id="type" required>

  <label for="event">Veranstaltung:</label>
  <input type="text" name="event" id="event" required>

  <label for="reason">Grund / Beschreibung:</label>
  <input type="text" name="reason" id="reason" required>

  <label for="date">Datum:</label>
  <input type="date" name="date" id="date" required>

  <button type="submit" class="btn">â• Eintragen</button>
  <a href="/penalties" class="btn btn-cancel">Abbrechen</a>
</form>
