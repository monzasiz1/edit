<h2 class="apple2025-section-title" style="margin-bottom:1.7em;">Neuen Benutzer anlegen</h2>
<% if (error) { %>
  <div class="apple2025-error"><%= error %></div>
<% } %>
<form action="/users/add" method="POST" class="apple2025-form-card">
  <label for="username">Benutzername</label>
  <input type="text" name="username" id="username" required autocomplete="off" maxlength="40">

  <label for="password">Passwort</label>
  <input type="password" name="password" id="password" required>

  <label for="is_admin" class="apple2025-checkbox-label">
    <input type="checkbox" name="is_admin" id="is_admin" class="apple2025-checkbox">
    Administratorrechte
  </label>
  <button type="submit" class="apple2025-btn">Hinzufügen</button>
</form>
