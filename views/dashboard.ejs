      <span class="apple-welcome-emoji">üëã</span>
      Willkommen zur√ºck,<br>
      <strong><%= user.username %></strong>
    </h1>
    <div class="apple-hero-badge">Dein <span>Strafenkonto</span> im √úberblick</div>
  </div>

  <% if (!penalties || penalties.length === 0) { %>
    <div class="apple-empty">
      <span class="apple-empty-emoji">üéâ</span>
      <span class="apple-empty-text">Keine Strafen ‚Äì alles sauber!<br>Genie√ü den Tag.</span>
    </div>
  <% } else { %>
    <section class="apple-cards-list">
      <% let total = 0; %>
      <% penalties.forEach(p => { total += Number(p.amount); %>
        <article class="apple-card <%= p.status %>">
          <!-- Statuspunkt -->
          <span class="apple-status-dot <%= p.status %>"></span>
          <!-- Spie√ü-Chip -->
          <% if (p.admin) { %>
            <span class="apple-spiess-chip">
              <span class="apple-spiess-icon">üßë‚Äç‚öñÔ∏è</span>
              <span class="apple-spiess-name"><%= p.admin %></span>
            </span>
          <% } %>
          <div class="apple-card-content">
            <div class="apple-row apple-top-row">
              <span class="apple-card-emoji"><%= p.type === "Unp√ºnktlichkeit" ? "‚è∞" : p.type === "Uniform vergessen" ? "üëï" : "‚ö°" %></span>
              <span class="apple-type"><%= p.type %></span>
            </div>
            <div class="apple-row">
              <span>üìÖ</span><span><%= new Date(p.date).toLocaleDateString('de-DE') %></span>
            </div>
            <div class="apple-row">
              <span>üé™</span><span><%= p.event %></span>
            </div>
            <div class="apple-row">
              <span>üí∂</span><span><%= Number(p.amount).toFixed(2) %> ‚Ç¨</span>
            </div>
          </div>
        </article>
      <% }) %>
